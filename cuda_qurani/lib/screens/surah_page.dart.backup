  Widget _buildContinuousVerses(RecitationProvider provider) {
    // Build continuous text like traditional Quran layout
    List<InlineSpan> textSpans = [];

    final bool isRecording = provider.isRecording;

    for (int i = 0; i < widget.surah.verses.length; i++) {
      final verse = widget.surah.verses[i];
      final isCurrentVerse = provider.currentVerseIndex == verse.number;

      // üéØ TARTIB STATUS: Prioritas untuk evaluasi urutan ayat
      final tartibStatus = provider.tartibStatus[verse.number] ?? TartibStatus.unread;
      final tartibBg = _getTartibBackgroundColor(tartibStatus);
      
      // Legacy word-level status (fallback jika tartib tidak tersedia)
